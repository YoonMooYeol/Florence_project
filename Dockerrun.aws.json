{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "name": "static",
            "host": {
                "sourcePath": "/var/app/current/static"
            }
        },
        {
            "name": "media",
            "host": {
                "sourcePath": "/var/app/current/media"
            }
        },
        {
            "name": "nginx-conf",
            "host": {
                "sourcePath": "/var/app/current/nginx"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "web",
            "image": "florence-app",
            "essential": true,
            "memory": 512,
            "environment": [
                {
                    "name": "SERVICE_TYPE",
                    "value": "web"
                },
                {
                    "name": "DEBUG",
                    "value": "0"
                },
                {
                    "name": "SECRET_KEY",
                    "value": "YOUR_SECRET_KEY"
                },
                {
                    "name": "DATABASE",
                    "value": "postgres"
                },
                {
                    "name": "DB_ENGINE",
                    "value": "django.db.backends.postgresql"
                },
                {
                    "name": "DB_NAME",
                    "value": "YOUR_DB_NAME"
                },
                {
                    "name": "DB_USER",
                    "value": "YOUR_DB_USER"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "YOUR_DB_PASSWORD"
                },
                {
                    "name": "DB_HOST",
                    "value": "YOUR_DB_HOST"
                },
                {
                    "name": "DB_PORT",
                    "value": "5432"
                },
                {
                    "name": "SERVICE_TYPE",
                    "value": "web"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "static",
                    "containerPath": "/app/static"
                },
                {
                    "sourceVolume": "media",
                    "containerPath": "/app/media"
                }
            ]
        },
        {
            "name": "nginx",
            "image": "nginx:latest",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "web"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "nginx-conf",
                    "containerPath": "/etc/nginx/conf.d",
                    "readOnly": true
                },
                {
                    "sourceVolume": "static",
                    "containerPath": "/home/app/static",
                    "readOnly": true
                },
                {
                    "sourceVolume": "media",
                    "containerPath": "/home/app/media",
                    "readOnly": true
                }
            ]
        },
        {
            "name": "celery-worker",
            "image": "florence-app",
            "essential": false,
            "memory": 256,
            "environment": [
                {
                    "name": "SERVICE_TYPE",
                    "value": "celery-worker"
                }
            ],
            "links": [
                "web",
                "redis"
            ]
        },
        {
            "name": "celery-beat",
            "image": "florence-app",
            "essential": false,
            "memory": 128,
            "environment": [
                {
                    "name": "SERVICE_TYPE",
                    "value": "celery-beat"
                }
            ],
            "links": [
                "web",
                "redis"
            ]
        },
        {
            "name": "redis",
            "image": "redis:7-alpine",
            "essential": true,
            "memory": 128
        }
    ]
}